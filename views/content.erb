<article>
  <section class="memo">
    <h1><%= @title %></h1>
    <p><%= @content %></p>
  </section>
  <seciton class="edit-delete-button">
    <form class="button" action= "/memos/<%= @id %>/edit" method="GET">
      <input type="submit" value="編集">
    </form>
    <form class="button" action= "/memos/<%= @id %>" method="POST">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="削除">
    </form>
  </section>
</article>
