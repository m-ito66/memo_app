<article>
  <section class="memo">
    <h1><%= h(@memo['title']) %></h1>
    <p><%= h(@memo['content']) %></p>
  </section>
  <section class="edit-delete-button">
    <form class="button" action= "/memos/<%= @memo['id'] %>/edit" method="GET">
      <input type="submit" value="編集">
    </form>
    <form class="button" action= "/memos/<%= @memo['id'] %>" method="POST">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="削除">
    </form>
  </section>
</article>
